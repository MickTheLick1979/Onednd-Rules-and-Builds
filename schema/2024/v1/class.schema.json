{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "class (v1)",
  "description": "Conservative v1 schema for 2024 classes. Keep loose; tighten later.",
  "anyOf": [
    { "type": "array", "items": { "$ref": "#/$defs/classItem" } },
    {
      "type": "object",
      "properties": {
        "class": {
          "type": "array",
          "items": { "$ref": "#/$defs/classItem" }
        }
      },
      "required": ["class"],
      "additionalProperties": true
    }
  ],
  "$defs": {
    "classItem": {
      "type": "object",
      "properties": {
        "name":                 { "type": "string", "minLength": 1 },
        "source":               { "type": "string" },

        "hd":                   { "type": ["object","string","number","null"] },
        "proficiency":          { "type": ["array","object","string","null"] },
        "startingProficiencies":{ "type": ["array","object","string","null"] },
        "startingEquipment":    { "type": ["array","object","string","null"] },
        "multiclassing":        { "type": ["array","object","string","null"] },

        "classFeatures":        { "type": ["array","object","null"] },
        "subclassTitle":        { "type": ["string","null"] },
        "subclasses":           { "type": ["array","object","null"] },

        "spellcastingAbility":  { "type": ["string","null"] },
        "cantripProgression":   { "type": ["array","string","object","null"] },
        "spellcastingProgression": { "type": ["array","string","object","null"] },
        "casterProgression":    { "type": ["string","array","object","null"] },

        "entries":              { "type": ["array","object","string","null"] },
        "_copy":                { "type": ["object","null"] }
      },
      "required": ["name"],
      "additionalProperties": true
    }
  }
}
