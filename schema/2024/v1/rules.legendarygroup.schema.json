{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "One D&D 2024 — Legendary Group (v1, conservative)",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": true,
    "required": ["name", "source"],
    "properties": {
      "name":            { "type": "string", "minLength": 1 },
      "source":          { "type": "string", "pattern": "^X[A-Z]+$" },
      "page":            { "type": ["integer", "string", "null"] },

      "lairActions":     { "type": ["string", "array", "object"] },
      "regionalEffects": { "type": ["string", "array", "object"] },
      "legendaryActions":{ "type": ["string", "array", "object"] },
      "entries":         { "type": ["string", "array", "object"] }
    }
  }
}
