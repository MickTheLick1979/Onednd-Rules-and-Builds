{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "tableGroup (v1)",
  "description": "Conservative v1 schema for 2024 tableGroup.",
  "anyOf": [
    { "type": "array", "items": { "$ref": "#/$defs/item"} },
    {
      "type": "object",
      "properties": {
        "tableGroup": {
          "type": "array",
          "items": { "$ref": "#/$defs/item"}
        }
      },
      "required": ["tableGroup"],
      "additionalProperties": true
    }
  ],
  "$defs": {
    "cell": { "type": ["string","object","array","number","boolean","null"] },
    "entry": { "type": ["string","object","array","number","boolean","null"] },
    "tableRef": { "type": ["string","object","array","null"] },
    "item": {
      "type": "object",
      "properties": {
        "name":      { "type": "string", "minLength": 1 },
        "source":    { "type": "string" },

        "caption":   { "type": ["string","object","array","null"] },
        "style":     { "type": ["string","array","null"] },

        "tables": {
          "type": ["array","null"],
          "items": { "$ref": "#/$defs/tableRef" }
        },

        "entries": {
          "type": ["array","null"],
          "items": { "$ref": "#/$defs/entry" }
        },

        "additionalSources": { "type": ["array","null"], "items": { "type": ["string","object","null"] } },
        "otherSources":      { "type": ["array","null"], "items": { "type": ["string","object","null"] } },
        "srd": { "type": ["boolean","string","null"] },

        "_copy":    { "type": ["object","null"] }
      },
      "required": ["name"],
      "additionalProperties": true
    }
  }
}
