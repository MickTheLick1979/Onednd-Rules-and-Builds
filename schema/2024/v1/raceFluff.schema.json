{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "raceFluff (v1)",
  "description": "Conservative v1 schema for legacy 2014 raceFluff (Phase 9). Prefer speciesFluff going forward.",
  "anyOf": [
    { "type": "array", "items": { "$ref": "#/$defs/item" } },
    {
      "type": "object",
      "properties": {
        "raceFluff": {
          "type": "array",
          "items": { "$ref": "#/$defs/item" }
        }
      },
      "required": ["raceFluff"],
      "additionalProperties": true
    }
  ],
  "$defs": {
    "entry": { "type": ["string","object","array","number","boolean","null"] },
    "image": { "type": ["string","object","null"] },
    "item": {
      "type": "object",
      "properties": {
        "name":   { "type": "string", "minLength": 1 },
        "source": { "type": "string" },

        "entries": {
          "type": ["array","null"],
          "items": { "$ref": "#/$defs/entry" }
        },
        "images": {
          "type": ["array","null"],
          "items": { "$ref": "#/$defs/image" }
        },

        "additionalSources": {
          "type": ["array","null"],
          "items": { "type": ["string","object","null"] }
        },
        "otherSources": {
          "type": ["array","null"],
          "items": { "type": ["string","object","null"] }
        },

        "_copy": { "type": ["object","null"] }
      },
      "required": ["name"],
      "additionalProperties": true
    }
  }
}
