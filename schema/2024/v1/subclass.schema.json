{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "subclass (v1)",
  "description": "Conservative v1 schema for 2024 subclass.",
  "anyOf": [
    { "type": "array", "items": { "$ref": "#/$defs/item" } },
    {
      "type": "object",
      "properties": {
        "subclass": {
          "type": "array",
          "items": { "$ref": "#/$defs/item" }
        }
      },
      "required": ["subclass"],
      "additionalProperties": true
    }
  ],
  "$defs": {
    "entry": { "type": ["string","object","array","number","boolean","null"] },
    "featureRef": { "type": ["string","object","null"] },
    "item": {
      "type": "object",
      "properties": {
        "name":         { "type": "string", "minLength": 1 },
        "source":       { "type": "string" },

        "className":    { "type": ["string","null"] },
        "classSource":  { "type": ["string","null"] },
        "shortName":    { "type": ["string","null"] },
        "subclassShortName": { "type": ["string","null"] },

        "entries":      { "type": ["array","null"], "items": { "$ref": "#/$defs/entry" } },
        "subclassFeatures": { "type": ["array","null"], "items": { "$ref": "#/$defs/featureRef" } },

        "additionalSources": { "type": ["array","null"], "items": { "type": ["string","object","null"] } },
        "otherSources":      { "type": ["array","null"], "items": { "type": ["string","object","null"] } },
        "srd":         { "type": ["boolean","string","null"] },

        "_copy":       { "type": ["object","null"] }
      },
      "required": ["name"],
      "additionalProperties": true
    }
  }
}
