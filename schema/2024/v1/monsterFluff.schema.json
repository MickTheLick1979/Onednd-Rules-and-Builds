{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "monsterFluff (v1)",
  "description": "Conservative v1 schema for 2024 monsterFluff.",
  "anyOf": [
    { "type": "array", "items": { "$ref": "#/$defs/item" } },
    {
      "type": "object",
      "properties": {
        "monsterFluff": { "type": "array", "items": { "$ref": "#/$defs/item" } }
      },
      "required": [ "monsterFluff" ],
      "additionalProperties": true
    }
  ],
  "$defs": {
    "image": {
      "type": ["object","string"],
      "properties": {
        "type":   { "type": "string" },
        "href":   { "type": ["string","object"] },
        "title":  { "type": "string" },
        "credit": { "type": ["string","array","null"] }
      },
      "additionalProperties": true
    },
    "item": {
      "type": "object",
      "properties": {
        "name":    { "type": "string", "minLength": 1 },
        "source":  { "type": "string" },
        "entries": {
          "type": ["array","null"],
          "items": { "type": ["string","object","array","number","boolean","null"] }
        },
        "images": {
          "type": ["array","null"],
          "items": { "$ref": "#/$defs/image" }
        },
        "_copy": { "type": ["object","null"] }
      },
      "required": ["name"],
      "additionalProperties": true
    }
  }
}