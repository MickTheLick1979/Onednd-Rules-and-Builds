{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "object (v1)",
  "description": "Conservative v1 schema for 2024 object.",
  "anyOf": [
    { "type": "array", "items": { "$ref": "#/$defs/item" } },
    {
      "type": "object",
      "properties": {
        "object": {
          "type": "array",
          "items": { "$ref": "#/$defs/item" }
        }
      },
      "required": ["object"],
      "additionalProperties": true
    }
  ],
  "$defs": {
    "entry": { "type": ["string","object","array","number","boolean","null"] },
    "item": {
      "type": "object",
      "properties": {
        "name":   { "type": "string", "minLength": 1 },
        "source": { "type": "string" },

        "size":   { "type": ["string","array","null"] },
        "type":   { "type": ["string","object","null"] },

        "ac":     { "type": ["number","integer","array","object","string","null"] },
        "hp":     { "type": ["object","number","string","null"] },

        "immune":          { "type": ["array","string","object","null"] },
        "resist":          { "type": ["array","string","object","null"] },
        "vulnerable":      { "type": ["array","string","object","null"] },
        "conditionImmune": { "type": ["array","string","object","null"] },

        "entries": { "type": ["array","null"], "items": { "$ref": "#/$defs/entry" } },
        "action":  { "type": ["array","null"], "items": { "$ref": "#/$defs/entry" } },

        "additionalSources": { "type": ["array","null"], "items": { "type": ["string","object","null"] } },
        "otherSources":      { "type": ["array","null"], "items": { "type": ["string","object","null"] } },

        "_copy": { "type": ["object","null"] }
      },
      "required": ["name"],
      "additionalProperties": true
    }
  }
}
