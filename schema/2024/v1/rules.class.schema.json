{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "One D&D 2024 â€” Class (v1)",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": true,
    "required": ["name", "source"],
    "properties": {
      "name": { "type": "string", "minLength": 1 },
      "source": { "type": "string", "pattern": "^X[A-Z]+$" },
