{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://onednd.local/schema/2024/v1/rules.spell.schema.json",
  "title": "2024 Rules â€” Spell (v1)",
  "description": "v1 spell schema aligned with our repo + 5etools. Required: name, level, school, source, classes. Conservative: allow optional fields; accept X* sources; allow either array root or { spell:[...] } root; allow classes as array-of-strings OR 5etools-style object.",
  "oneOf": [
    {
      "type": "object",
      "required": ["spell"],
      "additionalProperties": true,
      "properties": {
        "spell": { "$ref": "#/$defs/SpellArray" }
      }
    },
    { "$ref": "#/$defs/SpellArray" }
  ],
  "$defs": {
    "SpellArray": {
      "type": "array",
      "items": { "$ref": "#/$defs/Spell" }
    },
    "Spell": {
      "type": "object",
      "additionalProperties": true,
      "required": ["name", "level", "school", "source", "classes"],
      "properties": {
        "name":   { "type": "string",  "minLength": 1 },
        "level":  { "type": "integer", "minimum": 0, "maximum": 9 },
        "school": { "type": "string",  "minLength": 1 },
        "source": { "type": "string",  "pattern": "^X[A-Z0-9]{2,}$" },
        "classes": {
          "oneOf": [
            { "type": "array", "items": { "type": "string", "minLength": 1 } },
            {
              "type": "object",
              "additionalProperties": true,
              "required": ["fromClassList"],
              "properties": {
                "fromClassList": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "additionalProperties": true,
                    "required": ["name"],
                    "properties": { "name": { "type": "string", "minLength": 1 } }
                  }
                }
              }
            }
          ]
        }
      }
    }
  }
}
