{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "backgroundFluff (v1)",
  "description": "Conservative v1 schema for 2024 background fluff.",
  "anyOf": [
    { "type": "array", "items": { "$ref": "#/$defs/item" } },
    {
      "type": "object",
      "properties": {
        "backgroundFluff": {
          "type": "array",
          "items": { "$ref": "#/$defs/item" }
        }
      },
      "required": ["backgroundFluff"],
      "additionalProperties": true
    }
  ],
  "$defs": {
    "item": {
      "type": "object",
      "properties": {
        "name":   { "type": "string", "minLength": 1 },
        "source": { "type": "string" },

        "entries": {
          "type": "array",
          "items": { "type": ["string","object","array","number","boolean","null"] }
        },

        "images": {
          "type": "array",
          "items": { "type": ["string","object","array","number","boolean","null"] }
        },

        "_copy": { "type": ["object","null"] }
      },
      "required": ["name"],
      "additionalProperties": true
    }
  }
}
