{
  "": "https://json-schema.org/draft/2020-12/schema",
  "title": "species (v1)",
  "description": "Conservative v1 schema for 2024 species.",
  "anyOf": [
    { "type": "array", "items": { "": "#//item" } },
    {
      "type": "object",
      "properties": {
        "species": { "type": "array", "items": { "": "#//item" } }
      },
      "required": [ "species" ],
      "additionalProperties": true
    }
  ],
  "": {
    "item": {
      "type": "object",
      "properties": {
        "name":   { "type": "string", "minLength": 1 },
        "source": { "type": "string" },
        "entries": {
          "type": ["array","null"],
          "items": { "type": ["string","object","array","number","boolean","null"] }
        },
        "_copy": { "type": ["object","null"] }
      },
      "required": ["name"],
      "additionalProperties": true
    }
  }
}