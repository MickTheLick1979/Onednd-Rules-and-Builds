{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "2024 v1 Rules Schema - sense",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["name", "source"],
    "properties": {
      "name": { "type": "string", "minLength": 1 },
      "source": { "type": "string", "pattern": "^X[A-Z]+$" },
      "page": {
        "anyOf": [
          { "type": "integer" },
          { "type": "string" },
          { "type": "null" }
        ]
      },
      "entries": {
        "anyOf": [
          { "type": "string" },
          { "type": "array" },
          { "type": "object" },
          { "type": "null" }
        ]
      },
      "desc": {
        "anyOf": [
          { "type": "string" },
          { "type": "array" },
          { "type": "object" },
          { "type": "null" }
        ]
      }
    },
    "additionalProperties": true
  }
}