{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "action (v1)",
  "description": "Conservative v1 schema for 2024 actions.",
  "anyOf": [
    {
      "type": "array",
      "items": { "$ref": "#/$defs/actionItem" }
    },
    {
      "type": "object",
      "properties": {
        "action": {
          "type": "array",
          "items": { "$ref": "#/$defs/actionItem" }
        }
      },
      "required": ["action"],
      "additionalProperties": true
    }
  ],
  "$defs": {
    "actionItem": {
      "type": "object",
      "properties": {
        "name":   { "type": "string", "minLength": 1 },
        "source": { "type": "string" },
        "entries": {
          "type": "array",
          "items": { "type": ["string","object","array","number","boolean","null"] }
        }
      },
      "required": ["name"],
      "additionalProperties": true
    }
  }
}
