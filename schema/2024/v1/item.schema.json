{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "item (v1)",
  "description": "Conservative v1 schema for 2024 item.",
  "anyOf": [
    { "type": "array", "items": { "$ref": "#/$defs/item" } },
    {
      "type": "object",
      "properties": {
        "item": {
          "type": "array",
          "items": { "$ref": "#/$defs/item" }
        }
      },
      "required": ["item"],
      "additionalProperties": true
    }
  ],
  "$defs": {
    "entry": { "type": ["string","object","array","number","boolean","null"] },
    "stringArray": { "type": ["array","null"], "items": { "type": "string" } },
    "numOrStr": { "type": ["number","integer","string","null"] },
    "objOrStr": { "type": ["object","string","null"] },
    "item": {
      "type": "object",
      "properties": {
        "name":     { "type": "string", "minLength": 1 },
        "source":   { "type": "string" },

        "type":     { "type": ["string","null"] },
        "rarity":   { "type": ["string","null"] },
        "wondrous": { "type": ["boolean","string","null"] },

        "reqAttune":  { "type": ["boolean","string","null"] },
        "attunement": { "type": ["boolean","string","null"] },

        "value":    { "type": ["number","integer","string","object","null"] },
        "cost":     { "type": ["number","integer","string","object","null"] },
        "weight":   { "type": ["number","integer","string","null"] },

        "entries":  { "type": ["array","null"], "items": { "$ref": "#/$defs/entry" } },

        "property":       { "$ref": "#/$defs/stringArray" },
        "weapon":         { "type": ["boolean","string","null"] },
        "weaponCategory": { "type": ["string","null"] },
        "ammoType":       { "type": ["string","null"] },
        "range":          { "type": ["string","object","array","null"] },
        "dmg1":           { "type": ["string","null"] },
        "dmg2":           { "type": ["string","null"] },
        "dmgType":        { "type": ["string","object","null"] },

        "armor":          { "type": ["boolean","string","null"] },
        "armorCategory":  { "type": ["string","null"] },
        "ac":             { "type": ["number","integer","string","object","null"] },
        "strength":       { "type": ["number","integer","string","null"] },
        "stealth":        { "type": ["string","boolean","null"] },

        "bonusWeapon":        { "type": ["number","integer","string","null"] },
        "bonusAc":            { "type": ["number","integer","string","null"] },
        "bonusSpellAttack":   { "type": ["number","integer","string","null"] },
        "bonusSpellSaveDc":   { "type": ["number","integer","string","null"] },

        "additionalSources": { "type": ["array","null"], "items": { "type": ["string","object","null"] } },
        "otherSources":      { "type": ["array","null"], "items": { "type": ["string","object","null"] } },
        "srd":               { "type": ["boolean","string","null"] },

        "_copy":    { "type": ["object","null"] }
      },
      "required": ["name"],
      "additionalProperties": true
    }
  }
}
