{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "table (v1)",
  "description": "Conservative v1 schema for 2024 table.",
  "anyOf": [
    { "type": "array", "items": { "$ref": "#/$defs/item"} },
    {
      "type": "object",
      "properties": {
        "table": {
          "type": "array",
          "items": { "$ref": "#/$defs/item"}
        }
      },
      "required": ["table"],
      "additionalProperties": true
    }
  ],
  "$defs": {
    "cell": { "type": ["string","object","array","number","boolean","null"] },
    "entry": { "type": ["string","object","array","number","boolean","null"] },
    "item": {
      "type": "object",
      "properties": {
        "name":      { "type": "string", "minLength": 1 },
        "source":    { "type": "string" },

        "caption":   { "type": ["string","object","array","null"] },
        "style":     { "type": ["string","array","null"] },
        "colLabels": { "type": ["array","null"], "items": { "type": "string" } },
        "rowLabels": { "type": ["array","null"], "items": { "type": "string" } },
        "colStyles": { "type": ["array","null"], "items": { "type": ["string","null"] } },
        "rows": {
          "type": ["array","null"],
          "items": {
            "type": ["array","object","string","null"],
            "items": { "$ref": "#/$defs/cell" }
          }
        },

        "entries": {
          "type": ["array","null"],
          "items": { "$ref": "#/$defs/entry" }
        },

        "additionalSources": { "type": ["array","null"], "items": { "type": ["string","object","null"] } },
        "otherSources":      { "type": ["array","null"], "items": { "type": ["string","object","null"] } },
        "srd": { "type": ["boolean","string","null"] },

        "_copy":    { "type": ["object","null"] }
      },
      "required": ["name"],
      "additionalProperties": true
    }
  }
}
