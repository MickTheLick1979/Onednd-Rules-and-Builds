{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schema/2024/v1/rules.language.schema.json",
  "title": "One D&D 2024 â€” Language (v1, wrapper object)",
  "description": "2024 languages wrapped as { \"language\": [...] }. Items remain permissive; sources are X* books.",
  "type": "object",
  "required": ["language"],
  "additionalProperties": false,
  "properties": {
    "language": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["name", "source"],
        "properties": {
          "name":   { "type": "string", "minLength": 1 },
          "source": { "type": "string", "pattern": "^X[A-Z]+$" },
          "page":   { "type": ["integer", "string"] },

          "typicalSpeakers": { "type": ["string", "array"] },
          "script":          { "type": ["string", "null"] },
          "rarity":          { "type": ["string", "null"] },
          "entries":         { "type": ["string", "array", "object"] },
          "dialects":        { "type": ["array", "string", "object"] },
          "basicRules2024":  { "type": ["boolean", "null"] },
          "srd52":           { "type": ["boolean", "null"] }
        }
      }
    }
  }
}