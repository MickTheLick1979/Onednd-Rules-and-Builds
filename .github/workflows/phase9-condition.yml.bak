name: phase9-condition
on:
  pull_request:
    paths:
      - "rules/2024/condition.json"
      - "schema/2024/v1/condition.schema.json"
      - "scripts/phase9/validate_condition.py"
      - ".github/workflows/phase9-condition.yml"
  push:
    branches: [ master ]
    paths:
      - "rules/2024/condition.json"
      - "schema/2024/v1/condition.schema.json"
      - "scripts/phase9/validate_condition.py"
      - ".github/workflows/phase9-condition.yml"
jobs:
  validate:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v5
        with:
          python-version: "3.12"
      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          pip install jsonschema
      - name: Validate condition.json
        run: |
          python scripts/phase9/validate_condition.py
