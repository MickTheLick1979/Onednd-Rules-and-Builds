name: phase9-action

on:
  pull_request:
    paths:
      - "rules/2024/action.json"
      - "schema/2024/v1/action.schema.json"
      - "scripts/phase9/validate_action.py"
      - ".github/workflows/phase9-action.yml"
  push:
    branches: [ main ]
    paths:
      - "rules/2024/action.json"
      - "schema/2024/v1/action.schema.json"
      - "scripts/phase9/validate_action.py"
      - ".github/workflows/phase9-action.yml"

jobs:
  validate:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v5
      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt
        with:
          python-version: "3.11"
      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          pip install jsonschema
      - name: Validate action.json
        run: |
          python scripts/phase9/validate_action.py



